<%= form_for survey do |f| %>
  <div class="form-group">
    <%= f.label(:title) %>
    <%= f.text_field(:title, class: "form-control", required: true) %>
  </div>
  <div class="form-group">
    <%= f.label(:description) %>
    <%= f.text_area(:description, class: "form-control") %>
  </div>
  <div  class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
